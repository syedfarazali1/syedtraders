
@{
    ViewBag.Title = "InvoiceDetails";
    Layout = "~/Views/Shared/Deshboard.cshtml";
}

<div class="container-fluid float-right">
    <h3>PoNumber = @ViewBag.PoNum</h3>
</div>

<div class="table-responsive">
    <table class="table table-dark table-hover">
        <tr>
            <td>InvoiceNumber</td>
            <td>ProductName</td>
            <td>Quantity</td>
            <td>UnitPrice</td>
            <td>Amount</td>
            <td>InvoiceDate</td>
            <td>CustomerName</td>
            <td>PaymentMethodName</td>
        </tr>
        @if (ViewBag.list != null)
        {

            foreach (var item in ViewBag.list)
            {
                <tr>
                    <td>@item.InvoiceNumber</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Amount</td>
                    <td>@item.InvoiceDate</td>
                    <td>@item.CustomerName</td>
                    <td>@item.PaymentMethodName</td>
                </tr>
            }
        }

    </table>
</div>
<h3>TotalAmount = @ViewBag.TotalAmount</h3>
<h3>TaxAmount = @ViewBag.TaxAmount</h3>
<h3>
    GrandTotal = @ViewBag.GrandTotal
</h3>
<h3>PayableAmount = @ViewBag.PayableAmount</h3>



<h3>Balance = @ViewBag.TotalBance</h3>
