
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Syed Traders</title>
    <link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/assets/js/sb-admin-2.min.js"></script>
    <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/js/demo/datatables-demo.js"></script>
    <style>
        /* Custom styles for the invoice */
        * {
            color: #000000 !important;
        }

        .container-fluid {
            margin: 0 auto;
            padding: 20px;
            background-color: #f7f7f7;
        }

        .invoice-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .invoice-header h2 {
                margin: 0;
            }

        .invoice-details {
            margin-bottom: 30px;
        }

            .invoice-details .row {
                margin-bottom: 10px;
            }

            .invoice-details .col {
                text-align: right;
            }

        .invoice-items table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        .invoice-items th,
        .invoice-items td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .invoice-total {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="invoice-container container-fluid">
            <div class="invoice-header">
                <h2>Sales Invoice</h2>
            </div>
            <form id="sub" action="PrintPDF" method="post">
            </form>
            <div class="invoice-details">
                <div class="row float-right">
                    <div class="col-12">
                        <strong>Invoice No:</strong>
                        @ViewBag.InvoiceNumber
                    </div>


                    <div class="col-12">
                        <strong>Date:</strong>
                        @ViewBag.Date
                    </div>

                </div>
            </div>

            <div class="invoice-items">
                <table>
                    <thead>
                        <tr>
                            <th>ProdcutName</th>
                            <th>Quantity</th>
                            <th>UnitPrice</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Invoice)
                        {
                            <tr>
                                <td>@item.ProdcutName</td>
                                <td>@item.quantity</td>
                                <td>@item.unitPrice</td>
                                <td>@item.amount</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <div class="invoice-total">
                <strong>Total: @ViewBag.Total</strong>
            </div>
            <div class="invoice-total">
                <strong>Balance Amount: @ViewBag.Balance</strong>
            </div>
            <div class="invoice-total">
                <strong>Paid Amount: @ViewBag.PayableAmount</strong>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<script>

    $(document).ready(function () {
        $("form#sub").submit();
    });
</script>